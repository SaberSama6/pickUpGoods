.goldmember {
  display: flex;
  flex-direction: column;
}

.immediately {
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid rgb(235, 235, 235);
}

.opened {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
} 

.prompt {
  height: 90rpx;
  width: 100%;
  margin-top: 70rpx;
}

.promptes {
  color: rgb(101, 101, 101);
  font-size: 34rpx;
  height: 50rpx;
  margin-bottom: 36rpx;
  text-align: center;
  display: block;
  font-weight: 500;
  line-height: 1.1;
  position: relative;
}

view.prompt>text:before, view.prompt>text:after {
  content: ''; /*CSS伪类用法*/
  position: absolute; /*定位背景横线的位置*/
  top: 16rpx;
  background: rgb(101, 101, 101); /*宽和高做出来的背景横线*/
  width: 80rpx;
  height: 4rpx;
}

view.prompt>text:before {
  left: 212rpx; /*调整背景横线的左右距离*/
}

view.prompt>text:after {
  right: 212rpx;
}
