<!--pages/mine-indexte/mine-indexte.wxml-->
<!--整个页面  -->
<view class='page-frame'>
  <!-- 头部 -->
  <view class='member'>
    <view class='memberes membeing'>
      <!--头像  -->
      <image class='head-portraits' mode="scaleToFill" src="{{HeadPortraits}}" bindtap="PasswordLogin"></image>
      <!--昵称和ID  -->
      <view class='consumer'>
        <!-- 昵称 -->
        <text class='user-name' bindtap="carousel">{{UserName}}</text>
        <!-- ID -->
        <text class='id-number' bindtap="carousel">{{IdNumber}}</text>
      </view>
    </view>
    <!-- 右边 -->
    <view class='memberes membere'>
      <!-- 会员开通 -->
      <text class='immediately' bindtap='ImmediateMembership'>{{Immediately}}</text>
      <!-- 图片和文字 -->
      <view class='welfare'>
        <image src="/images/regularmembers.png"/>
        <text class='member-benefits'>{{MemberBenefits}}</text>
      </view>
    </view>
  </view>
  <view class='amount'>
  <!-- 充值与提现 -->
    <view class='amounte balance'>
      <text class='remaining deposit'>余额(元)</text>
      <text class='balances'>{{Balance}}</text>
      <view class='button-balance'>
        <text class='recharge' bindtap='WithdrawDeposit'>充值</text>
        <text class='WithdrawDeposit' bindtap='WithdrawDeposit'>提现</text>
      </view>
    </view>
    <!--我的收益  -->
    <view class='amounte earning'>
      <text class='remaining earnings'>我的收益（元）</text>
      <text class='balances'>{{Balanc}}</text>
    </view>
  </view>
  <view class='friends'>
    <text class='invitation'>邀请好友</text>
    <text class='invitation'>做单任务</text>
    <text class='invitation' bindtap='certification'>实名认证</text>
    <text class='invitation' bindtap='setting'>设置</text>
    <text class='invitation' bindtap="CustomerService">联系客服</text>
    <text class='invitation' bindtap='usinghelp'>使用帮助</text>
    <text class='invitation invitat'>我要合作</text>
  </view>
  <view class="form">
    <view class='delete'>
      <image class='bag' bindtap="homeage" src="/images/whitehomepage.png" />
      <image class='task' src="/images/task.png" />
      <image class='message' src="/images/message.png" />
      <image class='people' bindtap="mineindexte" src="/images/blueuser.png" />
    </view>
    <view class='typeface'>
      <text bindtap="homeage">首页</text>
      <text>任务</text>
      <text>消息</text>
      <text>我的</text>
    </view>
  </view>
</view>