/* pages/usinghelp/usinghelp.wxss */

.usinghelp {
  padding-top: 10rpx;
  background-color: rgb(235, 235, 235);
  height: 1280rpx;
}

.questions {
  display: flex;
  margin: 0 auto;
  width: 94%;
}

.message {
  display: block;
  margin-top: 45rpx;
  width: 34rpx;
  height: 34rpx;
}

.questions>text {
  margin-left: 20rpx;
  padding-top: 45rpx;
  height: 44rpx;
  line-height: 34rpx;
  width: 160rpx;
  color: rgb(101, 101, 101);
  display: block;
}

.tui-menu-list {
  line-height: 60rpx;
  color: rgb(40, 40, 40);
  font-size: 35rpx;
  padding: 10rpx 0rpx 0 10px;
  position: relative;
  background-color: white;
}

.tui-menu-list:last-child:before {
  height: 0;
}

.charge>text {
  line-height: 23rpx;
  color: rgb(101, 101, 101);
}

.tui-youjiantou:after {
  font-family: "iconfont" !important;
  content: '\e735';
  font-size: 40rpx;
  position: absolute;
  top: 50%;
  display: inline-block;
  -webkit-transform: translateY(-50%);
  transform: translateY(-30%);
  text-decoration: none;
  right: 10rpx;
}

/*清除浮动  */

.tui-clear:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}

/* pages/accordion/accordion.wxss */

.accordion-content {
  margin: 10px;
  border: 1px solid #c8c7cc;
  border-radius: 5px;
  overflow: hidden;
}

.tui-hide {
  display: none;
}

.tui-xiajiantou:after {
  font-family: "iconfont" !important;
  content: '\e733';
  font-size: 40rpx;
  position: absolute;
  top: 50%;
  display: inline-block;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
  text-decoration: none;
  right: 10rpx;
}

.tui-shangjiantou:after {
  font-family: "iconfont" !important;
  content: '\e734';
  font-size: 40rpx;
  position: absolute;
  top: 50%;
  display: inline-block;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
  text-decoration: none;
  right: 10rpx;
}

.tui-menu-list:last-child:before {
  height: 0;
}

.tui-menu-list:before {
  content: '';
  display: block;
  height: 1px;
  width: 100%;
  /* background-color: #c8c7cc;  */
  position: absolute;
  bottom: 0;
  left: 10px;
}
