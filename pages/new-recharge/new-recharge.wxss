/* pages/new-recharge/new-recharge.wxss */

.new-recharge {
  width: 100%;
  height: 1600rpx;
  background-color: rgb(235, 235, 235);
  display: flex;
  flex-direction: column;
}

.recharge {
  padding: 50rpx 32rpx 0 30rpx;
  height: 90rpx;
  width: 92%;
  background-color: rgb(255, 255, 255);
  display: flex;
  justify-content: space-between;
}

.selected-area {
  width: 62%;
  font-size: 40rpx;
  display: block;
  line-height: 34rpx;
  height: 38rpx;
}

.selected {
  height: 52rpx;
  width: 320rpx;
  line-height: 30rpx;
  padding: 0 0 5rpx 0;
  display: blockl;
}

.menu {
  color: rgb(38, 132, 196);
}

.radio-group {
  font-size: 40rpx;
  height: 62rpx;
  display: flex;
  justify-content: space-between;
}

.selected-change {
  margin: 0 auto;
  width: 90%;
  display: block;
}

.selected-change>text {
  padding-top: 20rpx;
  font-size: 24rpx;
  color: rgb(101, 101, 101);
  width: 500rpx;
  line-height: 28rpx;
  height: 54rpx;
  display: block;
}

.charging-standard {
  padding: 0 36rpx 0 36rpx;
  margin: 0 auto;
  width: 90%;
  height: 550rpx;
  background-color: white;
}

.charging {
  height: 150rpx;
  width: 90%;
  margin: 0 auto;
  padding-top: 96rpx;
  display: flex;
  justify-content: space-between;
}

.push-button {
  display: block;
  line-height: 85rpx;
  height: 85rpx;
  width: 270rpx;
  text-align: center;
  font-size: 36rpx;
}

.push {
  border: 1rpx solid rgb(195, 195, 195);
  color: rgb(40, 40, 40);
  border-radius: 50rpx;
}

.button {
  color: rgb(255, 255, 255);
  border-radius: 50rpx;
  background-color: rgb(38, 132, 196);
}
